<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lollipop"
    tools:context=".AddContact">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="40dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/logo_image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:padding="5dp"
            app:shapeAppearanceOverlay="@style/circleImageView"
            android:src="@drawable/baseline_account_circle_24"
            app:strokeColor="@color/black"
            app:strokeWidth="5dp">
        </com.google.android.material.imageview.ShapeableImageView>

        <EditText
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:hint="Num."
            android:autofillHints="numero"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:drawableStart="@drawable/baseline_numbers_24"
            android:drawablePadding="5dp"
            android:inputType="numberDecimal"
            android:typeface="sans"
            android:background="@drawable/shape"/>

        <EditText
            android:id="@+id/surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:hint="Cognome"
            android:autofillHints="name"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:drawableStart="@drawable/baseline_drive_file_rename_outline_24"
            android:drawablePadding="5dp"
            android:inputType="textPersonName"
            android:typeface="sans"
            android:background="@drawable/shape"/>
        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:hint="Nome"
            android:autofillHints="name"
            android:textSize="20sp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:inputType="textPersonName"
            android:typeface="sans"
            android:background="@drawable/shape"
            android:drawableStart="@drawable/baseline_drive_file_rename_outline_24"
            android:drawablePadding="5dp"/>

        <EditText
            android:id="@+id/country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:hint="Luogo di nascita"
            android:autofillHints="luogo"
            android:textSize="20sp"
            android:inputType="textPersonName"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:typeface="sans"
            android:background="@drawable/shape"
            android:drawableStart="@drawable/baseline_home_work_24"
            android:drawablePadding="5dp"/>
        <EditText
            android:id="@+id/birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:hint="Data di nascita"
            android:autofillHints="creditCardExpirationDate"
            android:textSize="20sp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:inputType="date"
            android:typeface="sans"
            android:background="@drawable/shape"
            android:drawableStart="@drawable/baseline_calendar_month_24"
            android:drawablePadding="5dp"/>
        <EditText
            android:id="@+id/data_registrazione"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:hint="@string/data_di_registrazione"
            android:autofillHints="creditCardExpirationDate"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:inputType="datetime"
            android:typeface="sans"
            android:background="@drawable/shape"
            android:drawableStart="@drawable/baseline_app_registration_24"
            android:drawablePadding="5dp"/>
        <EditText
            android:id="@+id/tessera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:hint="@string/tessera"
            android:autofillHints="postalAddress"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:inputType="textPersonName"
            android:typeface="sans"
            android:background="@drawable/shape"
            android:drawableStart="@drawable/baseline_account_box_24"
            android:drawablePadding="5dp"/>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/Add_logo_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout1"
        android:layout_alignEnd="@+id/linearLayout1"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="-230dp"
        android:clickable="true"
        app:srcCompat="@drawable/baseline_camera_alt_24"
        android:backgroundTint="#000000"
        android:contentDescription="add_pic"
        app:borderWidth="2dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        app:maxImageSize="45dp"
        app:fabCustomSize="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/linearLayout1"
        android:src="@drawable/baseline_check_24"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="#000000"
        android:contentDescription="Save"
        app:borderWidth="2dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout1"
        android:scaleType="center"
        app:maxImageSize="45dp"
        app:fabCustomSize="80dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/save_button"
        android:src="@drawable/baseline_close_24"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="#000000"
        android:contentDescription="Close"
        app:borderWidth="2dp"/>

</RelativeLayout>