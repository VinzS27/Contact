<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lollipop"
    tools:context=".ContactDetails">
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="40dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/logo_image_cd"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:padding="5dp"
            app:shapeAppearanceOverlay="@style/circleImageView"
            android:src="@drawable/baseline_account_circle_24"
            app:strokeColor="@color/black"
            app:strokeWidth="5dp">
        </com.google.android.material.imageview.ShapeableImageView>

        <TextView
            android:id="@+id/number_cd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:hint="Num."
            android:autofillHints="numero"
            android:textIsSelectable="true"
            android:textSize="20sp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:inputType="none"
            android:cursorVisible="false"
            android:focusableInTouchMode="false"
            android:typeface="sans"
            android:background="@drawable/shape"
            android:drawableStart="@drawable/baseline_numbers_24"
            android:drawablePadding="5dp" />
        <TextView
            android:id="@+id/surname_cd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:hint="Cognome"
            android:textIsSelectable="true"
            android:autofillHints="surname"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:drawableStart="@drawable/baseline_drive_file_rename_outline_24"
            android:drawablePadding="5dp"
            android:inputType="none"
            android:cursorVisible="false"
            android:focusableInTouchMode="false"
            android:typeface="sans"
            android:background="@drawable/shape"/>
        <TextView
            android:id="@+id/name_cd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:hint="Nome"
            android:textIsSelectable="true"
            android:autofillHints="nome"
            android:textSize="20sp"
            android:inputType="none"
            android:cursorVisible="false"
            android:focusableInTouchMode="false"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:typeface="sans"
            android:background="@drawable/shape"
            android:drawableStart="@drawable/baseline_drive_file_rename_outline_24"
            android:drawablePadding="5dp"/>
        <TextView
            android:id="@+id/country_cd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:hint="Luogo di nascita"
            android:textIsSelectable="true"
            android:autofillHints="luogo di nascita"
            android:textSize="20sp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:inputType="none"
            android:cursorVisible="false"
            android:focusableInTouchMode="false"
            android:typeface="sans"
            android:background="@drawable/shape"
            android:drawableStart="@drawable/baseline_home_work_24"
            android:drawablePadding="5dp"/>

        <TextView
            android:id="@+id/birthday_cd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:hint="Data di nascita"
            android:textIsSelectable="true"
            android:autofillHints="creditCardExpirationDate"
            android:textSize="20sp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:inputType="none"
            android:cursorVisible="false"
            android:focusableInTouchMode="false"
            android:typeface="sans"
            android:background="@drawable/shape"
            android:drawableStart="@drawable/baseline_calendar_month_24"
            android:drawablePadding="5dp"/>

        <TextView
            android:id="@+id/data_registrazione_cd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:hint="@string/data_di_registrazione"
            android:autofillHints="creditCardExpirationDate"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textIsSelectable="true"
            android:textColorHint="@color/black"
            android:inputType="none"
            android:cursorVisible="false"
            android:focusableInTouchMode="false"
            android:typeface="sans"
            android:background="@drawable/shape"
            android:drawableStart="@drawable/baseline_app_registration_24"
            android:drawablePadding="5dp"/>
        <TextView
            android:id="@+id/tessera_cd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:hint="@string/tessera"
            android:textIsSelectable="true"
            android:autofillHints="tessera"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:inputType="none"
            android:cursorVisible="false"
            android:focusableInTouchMode="false"
            android:typeface="sans"
            android:background="@drawable/shape"
            android:drawableStart="@drawable/baseline_account_box_24"
            android:drawablePadding="5dp"/>
    </LinearLayout>
</RelativeLayout>